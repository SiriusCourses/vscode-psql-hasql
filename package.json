{
  "name": "vscode-psql-hasql",
  "displayName": "vscode-psql-hasql",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:haskell"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "psql-hasql",
      "properties": {
        "psql_hasql.dbHost": {
          "type": "string",
          "default": "localhost",
          "markdownDescription": "Database host address."
        },
        "psql_hasql.dbPort": {
          "type": "number",
          "default": 5432,
          "markdownDescription": "Database port."
        },
        "psql_hasql.dbUser": {
          "type": "string",
          "default": "postgres",
          "markdownDescription": "Database user."
        },
        "psql_hasql.dbPassword": {
          "type": "string",
          "default": "postgres",
          "markdownDescription": "Database password."
        },
        "psql_hasql.dbName": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "markdownDescription": "Database name."
        },
        "psql_hasql.typeCasts": {
          "type": "object",
          "default": {},
          "markdownDescription": "Type casts when expression failed due of query complexity. Use cyrb53 hash and file name to specify the target."
        },
        "psql_hasql.defaultValues": {
          "type": "object",
          "default": {},
          "markdownDescription": "Default values when expression failed due of query complexity. Use cyrb53 hash and file name to specify the target."
        }
      }
    },
    "grammars": [
      {
        "path": "./syntaxes/hasql.json",
        "scopeName": "hasql.injection",
        "injectTo": [
          "source.haskell"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.hasql": "postgres"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/pg": "^8.6.5",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.16.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.2"
  },
  "extensionDependencies": [
    "justusadam.language-haskell"
  ],
  "dependencies": {
    "pg": "^8.7.3",
    "pg-native": "^3.0.0"
  }
}
